# ============================================
# BSM-AgentOS Configuration
# ============================================

# ====== Application ======
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ====== OpenAI / Model Providers ======
OPENAI_BSM_KEY=
OPENAI_BRINDER_KEY=
OPENAI_LEXNEXUS_KEY=
OPENAI_MODEL=gpt-4o-mini

# ====== Database (PostgreSQL) ======
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bsm
DB_USER=bsm_user
DB_PASSWORD=
DB_MAX_CONNECTIONS=20
DB_SSL=false

# ====== Redis Cache ======
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ====== Security ======
# Admin Token (minimum 16 characters in production)
ADMIN_TOKEN=change-me-to-strong-token

# JWT Secret (minimum 32 characters in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change-me-to-strong-jwt-secret
JWT_EXPIRY=24h

# Encryption Key (64 hex characters = 32 bytes)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# ====== Secrets Vault (Optional - HashiCorp Vault) ======
VAULT_ENABLED=false
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=
VAULT_NAMESPACE=

# ====== CORS (comma-separated origins) ======
CORS_ORIGINS=https://www.lexdo.uk,https://lexdo.uk,http://localhost:3000

# ====== Rate Limiting ======
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ====== Agent Configuration ======
MAX_AGENT_INPUT_LENGTH=4000
MAX_CONCURRENT_TASKS=10
TASK_POLL_INTERVAL=5000
TASK_TIMEOUT_SECONDS=300

# ====== Core Engine ======
ENGINE_ENABLE_PLUGINS=true
ENGINE_ENABLE_WORKFLOWS=true

# ====== ML Engine ======
ML_ENABLED=true
ML_MODELS_DIR=./data/models
ML_CACHE_PREDICTIONS=true

# ====== Security Hub ======
SECURITY_HUB_ENABLED=true
AUDIT_LOGGING_ENABLED=true
COMPLIANCE_CHECKING_ENABLED=true
THREAT_DETECTION_ENABLED=true

# ====== Monitoring ======
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=false
GRAFANA_PORT=3001

# ====== Sentry Error Tracking (Optional) ======
SENTRY_ENABLED=false
SENTRY_DSN=

# ====== Cloud Provider (AWS/GCP/Azure) ======
CLOUD_PROVIDER=
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ====== External Services ======
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
EMAIL_SERVICE_API_KEY=

# ====== Development Tools ======
DEBUG_MODE=false
ENABLE_API_DOCS=true
ENABLE_SWAGGER=true

